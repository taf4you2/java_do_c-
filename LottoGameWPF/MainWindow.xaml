<Window x:Class="LottoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lotto Game Generator" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Lottery Number Generator" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Game Type Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Select Game Type:" FontSize="14" Margin="0,0,0,10"/>
            <ComboBox x:Name="GameTypeComboBox" FontSize="14" Height="30">
                <ComboBoxItem Content="Lotto" IsSelected="True"/>
                <ComboBoxItem Content="MultiMulti"/>
                <ComboBoxItem Content="MiniLotto"/>
            </ComboBox>
        </StackPanel>

        <!-- Generate Button -->
        <Button Grid.Row="2" x:Name="GenerateButton" 
                Content="Generate Numbers" 
                Height="40" FontSize="16" 
                Click="GenerateButton_Click"
                Margin="0,0,0,20"/>

        <!-- Results Display -->
        <GroupBox Grid.Row="3" Header="Results" FontSize="14">
            <StackPanel x:Name="ResultsPanel" VerticalAlignment="Center">
                <TextBlock x:Name="GameNameTextBlock" 
                           FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,10"/>
                <TextBlock x:Name="NumbersTextBlock" 
                           FontSize="32" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           TextWrapping="Wrap"
                           Margin="0,10,0,10"/>
            </StackPanel>
        </GroupBox>

        <!-- Error Message -->
        <TextBlock Grid.Row="4" x:Name="ErrorTextBlock" 
                   Foreground="Red" FontSize="12" 
                   HorizontalAlignment="Center" 
                   TextWrapping="Wrap" Margin="0,10,0,0"/>
    </Grid>
</Window>